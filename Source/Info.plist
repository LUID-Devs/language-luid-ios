<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- App Information -->
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundleDisplayName</key>
	<string>Language Luid</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleVersion</key>
	<string>1</string>
	<key>CFBundleShortVersionString</key>
	<string>1.0</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>

	<!-- iOS Deployment -->
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>MinimumOSVersion</key>
	<string>17.0</string>

	<!-- Supported Interface Orientations -->
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<!-- UI Configuration -->
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIRequiresFullScreen</key>
	<false/>
	<key>UIStatusBarStyle</key>
	<string>UIStatusBarStyleDefault</string>
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<true/>

	<!-- Scene Configuration -->
	<key>UIApplicationSceneManifest</key>
	<dict>
		<key>UIApplicationSupportsMultipleScenes</key>
		<false/>
		<key>UISceneConfigurations</key>
		<dict>
			<key>UIWindowSceneSessionRoleApplication</key>
			<array>
				<dict>
					<key>UISceneConfigurationName</key>
					<string>Default Configuration</string>
					<key>UISceneDelegateClassName</key>
					<string>$(PRODUCT_MODULE_NAME).SceneDelegate</string>
				</dict>
			</array>
		</dict>
	</dict>

	<!-- Privacy - Microphone Usage -->
	<key>NSMicrophoneUsageDescription</key>
	<string>Language Luid needs access to your microphone to record your pronunciation for speech analysis and feedback. This helps improve your speaking skills in your target language.</string>

	<!-- Privacy - Speech Recognition -->
	<key>NSSpeechRecognitionUsageDescription</key>
	<string>Language Luid uses speech recognition to analyze your pronunciation and provide accurate feedback on your language learning progress.</string>

	<!-- Privacy - Camera Usage -->
	<key>NSCameraUsageDescription</key>
	<string>Language Luid needs access to your camera to take profile photos and for future AR language learning features.</string>

	<!-- Privacy - Photo Library Usage -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>Language Luid needs access to your photo library so you can select photos for your profile picture.</string>

	<!-- Privacy - Photo Library Add Usage -->
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>Language Luid needs permission to save screenshots of your learning achievements and progress to your photo library.</string>

	<!-- App Transport Security -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
		<key>NSAllowsLocalNetworking</key>
		<true/>
		<!-- Production API domains should use HTTPS -->
		<key>NSExceptionDomains</key>
		<dict>
			<key>localhost</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
				<key>NSIncludesSubdomains</key>
				<true/>
			</dict>
		</dict>
	</dict>

	<!-- Background Modes (for future use) -->
	<key>UIBackgroundModes</key>
	<array>
		<string>audio</string>
		<string>fetch</string>
	</array>

	<!-- Supported File Types -->
	<key>CFBundleDocumentTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeName</key>
			<string>Audio Files</string>
			<key>LSHandlerRank</key>
			<string>Alternate</string>
			<key>LSItemContentTypes</key>
			<array>
				<string>public.audio</string>
				<string>public.mp3</string>
			</array>
		</dict>
	</array>

	<!-- Capabilities -->
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>arm64</string>
	</array>

	<!-- App Category -->
	<key>LSApplicationCategoryType</key>
	<string>public.app-category.education</string>

	<!-- Localization -->
	<key>CFBundleAllowMixedLocalizations</key>
	<true/>
	<key>CFBundleLocalizations</key>
	<array>
		<string>en</string>
		<string>es</string>
		<string>fr</string>
		<string>de</string>
		<string>it</string>
		<string>pt</string>
		<string>ja</string>
		<string>ko</string>
		<string>zh</string>
		<string>ar</string>
		<string>ru</string>
	</array>

	<!-- Accessibility -->
	<key>UIAccessibilityTraits</key>
	<array>
		<string>UIAccessibilityTraitNone</string>
	</array>

	<!-- Launch Screen -->
	<key>UILaunchScreen</key>
	<dict>
		<key>UIImageName</key>
		<string>AppIcon</string>
		<key>UIColorName</key>
		<string>LaunchScreenBackground</string>
	</dict>

	<!-- URL Schemes (for deep linking) -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLName</key>
			<string>com.languageluid.app</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>languageluid</string>
			</array>
		</dict>
	</array>

	<!-- Universal Links (for future use) -->
	<key>com.apple.developer.associated-domains</key>
	<array>
		<string>applinks:languageluid.com</string>
		<string>applinks:www.languageluid.com</string>
	</array>

	<!-- App Icon -->
	<key>CFBundleIcons</key>
	<dict>
		<key>CFBundlePrimaryIcon</key>
		<dict>
			<key>CFBundleIconFiles</key>
			<array>
				<string>AppIcon</string>
			</array>
			<key>CFBundleIconName</key>
			<string>AppIcon</string>
		</dict>
	</dict>

	<!-- Fonts (if custom fonts are added later) -->
	<key>UIAppFonts</key>
	<array>
		<!-- Add custom font filenames here -->
	</array>

	<!-- Prevent App Store warnings -->
	<key>ITSAppUsesNonExemptEncryption</key>
	<false/>
</dict>
</plist>
